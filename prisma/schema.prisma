generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  HOME
  PERSONAL
  SCHOOL
  SOCIAL
  WORK
  NONE
}

enum Status {
  TO_DO
  DONE
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  category    Category @default(NONE)
  status      Status   @default(TO_DO)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  dueAt       DateTime @default(dbgenerated("NOW() + interval '7 days'"))
}
